<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/colorful"
    android:layout_height="match_parent"
    tools:context=".GameMainAct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomselector"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    >
                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/text1"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="-20dp"
                        android:fontFamily="@font/inter_bold"
                        android:letterSpacing="-0.04"
                        android:lineSpacingExtra="11sp"
                        android:text="Welcome to"
                        android:textColor="#f9cd1d"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/inter_bold"
                        android:letterSpacing="-0.04"
                        android:lineSpacingExtra="11sp"
                        android:text="Game Hub."
                        android:textColor="#6765ff"
                        android:textSize="45sp" />

                    <ImageView
                        android:id="@+id/bottom_nav"
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/nav" />


                </RelativeLayout>

                //most play text
                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/rel1"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/most" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:fontFamily="@font/inter_semibold"
                        android:lineSpacingExtra="3sp"
                        android:text="Most Play"
                        android:textColor="#6765ff"
                        android:textSize="20sp"

                        />


                </LinearLayout>

                //most play selection
                <HorizontalScrollView
                    android:id="@+id/mostplayitem"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/linear"
                    android:layout_marginTop="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/mostplaygame1"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/newg11"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            />

                        <ImageView
                            android:id="@+id/mostplaygame2"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/newg2"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"

                            />

                        <ImageView
                            android:id="@+id/mostplaygame3"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/g55"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginBottom="10dp"

                            />

                        <ImageView
                            android:id="@+id/mostplaygame4"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/g44"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="12dp"

                            />

                        <ImageView
                            android:id="@+id/mostplaygame5"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/g33"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"


                            />

                        <ImageView
                            android:id="@+id/mostplaygame6"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/g66"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="14dp"

                            />


                    </LinearLayout>


                </HorizontalScrollView>

                //popular
                <LinearLayout
                    android:id="@+id/popular"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/mostplayitem"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/popularicon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:fontFamily="@font/inter_semibold"
                        android:lineSpacingExtra="3sp"
                        android:text="Popular"
                        android:textColor="#fad345"
                        android:textSize="20sp"

                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/popular"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    >


                    //popular item1
                    <androidx.cardview.widget.CardView
                        android:id="@+id/popular1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:id="@+id/pop1"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/newp1"
                                />

                            <TextView
                                android:id="@+id/appname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="24dp"
                                android:layout_toEndOf="@+id/pop1"
                                android:fontFamily="@font/inter_semibold"
                                android:lineSpacingExtra="3sp"
                                android:text="Bubble Tower"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="66dp"
                                android:layout_height="16dp"
                                android:layout_below="@+id/appname"
                                android:layout_marginStart="25dp"
                                android:layout_toEndOf="@+id/pop1"
                                android:background="@drawable/fourstar"
                                android:layout_marginTop="3dp"/>

                            <ImageView
                                android:layout_width="78dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/play"
                                />


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    //popular item2
                    <androidx.cardview.widget.CardView
                        android:id="@+id/popular2"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:id="@+id/pop2"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/newp2"
                                />

                            <TextView
                                android:id="@+id/appname2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="24dp"
                                android:layout_toEndOf="@+id/pop2"
                                android:fontFamily="@font/inter_semibold"
                                android:lineSpacingExtra="3sp"
                                android:text="Tower Crash"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="66dp"
                                android:layout_height="16dp"
                                android:layout_below="@+id/appname2"
                                android:layout_marginStart="25dp"
                                android:layout_toEndOf="@+id/pop2"
                                android:background="@drawable/fourstar"
                                android:layout_marginTop="3dp"/>

                            <ImageView
                                android:layout_width="78dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/play"
                                />


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                    //popular item3
                    <androidx.cardview.widget.CardView
                        android:id="@+id/popular3"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:id="@+id/pop3"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/p3"
                                />

                            <TextView
                                android:id="@+id/appname3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="24dp"
                                android:layout_toEndOf="@+id/pop3"
                                android:fontFamily="@font/inter_semibold"
                                android:lineSpacingExtra="3sp"
                                android:text="Element Block"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="66dp"
                                android:layout_height="16dp"
                                android:layout_below="@+id/appname3"
                                android:layout_marginStart="25dp"
                                android:layout_toEndOf="@+id/pop3"
                                android:background="@drawable/threestar"
                                android:layout_marginTop="3dp"/>

                            <ImageView
                                android:layout_width="78dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/play"
                                />


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    //popular item4
                    <androidx.cardview.widget.CardView
                        android:id="@+id/popular4"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:id="@+id/pop4"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/p4"
                                />

                            <TextView
                                android:id="@+id/appname4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="24dp"
                                android:layout_toEndOf="@+id/pop4"
                                android:fontFamily="@font/inter_semibold"
                                android:lineSpacingExtra="3sp"
                                android:text="Moto Pool"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="66dp"
                                android:layout_height="16dp"
                                android:layout_below="@+id/appname4"
                                android:layout_marginStart="25dp"
                                android:layout_toEndOf="@+id/pop4"
                                android:background="@drawable/fourstar"
                                android:layout_marginTop="3dp"/>

                            <ImageView
                                android:layout_width="78dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/play"
                                />


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    //popular item5
                    <androidx.cardview.widget.CardView
                        android:id="@+id/popular5"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:id="@+id/pop5"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/p5"
                                />

                            <TextView
                                android:id="@+id/appname5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="24dp"
                                android:layout_toEndOf="@+id/pop5"
                                android:fontFamily="@font/inter_semibold"
                                android:lineSpacingExtra="3sp"
                                android:text="Gold Mine"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="66dp"
                                android:layout_height="16dp"
                                android:layout_below="@+id/appname5"
                                android:layout_marginStart="25dp"
                                android:layout_toEndOf="@+id/pop5"
                                android:background="@drawable/threestar"
                                android:layout_marginTop="3dp"/>

                            <ImageView
                                android:layout_width="78dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/play"
                                />


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>





                </LinearLayout>












            </RelativeLayout>



        </LinearLayout>

    </ScrollView>




    <LinearLayout
        android:id="@+id/bottomselector"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            //home

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/homemain" />

                </RelativeLayout>


            </LinearLayout>


            //category

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/menu" />

                </RelativeLayout>

            </LinearLayout>

            //contact

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/contact" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>