<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:layout_marginStart="448dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/borders"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imagne3"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="7dp"


            android:src="@drawable/ele" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:layout_marginStart="260dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/borders"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imagce2"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="7dp"

            android:src="@drawable/eleeee" />
    </LinearLayout>


    <!--    Side bar circles-->


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select One From the Following"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainsimg"
        android:layout_width="200dp"
        android:layout_height="145dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/w3" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/borders"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/image1x"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="7dp"

            android:src="@drawable/elee" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>