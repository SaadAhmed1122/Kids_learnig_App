<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameactivities.Classic">

    <TextView
        android:id="@+id/actiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="11sp"
        android:text="Classic"
        android:textColor="#fad345"
        android:textSize="45sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actiontext"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            //1st row
            <LinearLayout
                android:id="@+id/a1"
                android:layout_below="@+id/actiontext"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="20dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    //item1
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/c_item1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/classic1" />

                        </RelativeLayout>


                    </LinearLayout>


                    //item2
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/c_item2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView

                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/classic2" />

                        </RelativeLayout>

                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>

            //2nd row
            <LinearLayout
                android:id="@+id/a2"
                android:layout_below="@+id/a1"
                android:layout_width="match_parent"
                android:layout_height="230dp"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    //item3
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/c_item3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/classic3" />

                        </RelativeLayout>


                    </LinearLayout>


                    //item4
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/c_item4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView

                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/classic4" />

                        </RelativeLayout>

                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>

            //3rd row
            <LinearLayout
                android:id="@+id/a3"
                android:layout_below="@+id/a2"
                android:layout_width="match_parent"
                android:layout_height="230dp"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    //item5
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/c_item5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/classic5" />

                        </RelativeLayout>


                    </LinearLayout>


                    //item6
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/c_item6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView

                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@drawable/classic6" />

                        </RelativeLayout>

                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>



        </LinearLayout>

    </ScrollView>


</RelativeLayout>